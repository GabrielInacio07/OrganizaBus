

generator client {
  provider = "prisma-client-js" // âœ… sem "output"
}



datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  nome      String
  email     String @unique
  telefone  String
  cpf       String @unique
  senha     String
  tipo      String
  alunos   Aluno[]
}

model Aluno {
  id        Int    @id @default(autoincrement())
  nome      String
  email     String @unique
  telefone  String
  cpf       String @unique
  senha     String
  tipo      String
  faculdade String
  motoristaId Int
  motorista User @relation(fields:[motoristaId], references:[id])
}

