
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  nome      String
  email     String @unique
  telefone  String
  cpf       String @unique
  senha     String
  tipo      String
  alunos    Aluno[]
  valorMensalidade Float?
  diaVencimento Int?
}

model Aluno {
  id               Int        @id @default(autoincrement())
  nome             String
  email            String     @unique
  telefone         String
  cpf              String     @unique
  senha            String
  tipo             String
  faculdade        String
  possuiBolsa     Boolean @default(false)
  valorMensalidade Float
  valorBolsa     Float?
  motoristaId      Int
  motorista        User       @relation(fields: [motoristaId], references: [id])
  pagamentos       Pagamento[]
  statusPagamento  String     @default("n√£o gerado")
  criadoEm         DateTime   @default(now())
  atualizadoEm     DateTime   @updatedAt
}

model Pagamento {
  id               Int      @id @default(autoincrement())
  titulo           String
  tipo             String   // "mensalidade" | "auxilio"
  valor            Decimal
  quantidade       Int
  status           String
  qr_code          String?
  codigo_pix       String?
  pagamentoId      String   @unique
  criadoEm         DateTime @default(now())
  expiraEm         DateTime
  alunoId          Int
  aluno            Aluno    @relation(fields: [alunoId], references: [id])
}